<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shadow="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.magicsoft.testcode.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        shadow:sl_shadow_angle="0"
        shadow:sl_shadow_color="@color/colorAccent"
        shadow:sl_shadow_distance="9dp"
        shadow:sl_shadow_radius="5dp"
        shadow:sl_shadowed="true"
        android:padding="5dp"
        >

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/hl_heart0" />


    </com.magicsoft.testcode.widget.ShadowLayout>



    <com.magicsoft.testcode.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        shadow:sl_shadow_angle="90"
        shadow:sl_shadow_color="#97E9EF"
        shadow:sl_shadow_distance="3dp"
        shadow:sl_shadow_radius="3dp"
        shadow:sl_shadowed="true">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/hl_heart0" />
    </com.magicsoft.testcode.widget.ShadowLayout>



    <com.magicsoft.testcode.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        shadow:sl_shadow_angle="45"
        shadow:sl_shadow_color="#0f0"
        shadow:sl_shadow_distance="5dp"
        shadow:sl_shadow_radius="5dp"
        android:padding="15dp"
        shadow:sl_shadowed="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HelloWorld"
            android:textSize="17sp"
            />

    </com.magicsoft.testcode.widget.ShadowLayout>

    <com.magicsoft.testcode.widget.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        shadow:sl_shadow_angle="45"
        shadow:sl_shadow_color="#71e430"
        shadow:sl_shadow_distance="5dp"
        shadow:sl_shadow_radius="5dp"
        shadow:sl_shadowed="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banana"
            android:textColor="#71e430"
            android:textSize="22dp" />
    </com.magicsoft.testcode.widget.ShadowLayout>
</LinearLayout>